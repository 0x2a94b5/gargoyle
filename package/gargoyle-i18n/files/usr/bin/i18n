#!/bin/sh
# Copyright (C) 2013 BashfulBladder as part of i18n support for Gargoyle router firmware

# example: /usr/bin/i18n openvpn uc_cfg_f
# example: /usr/bin/i18n openvpn uc_cfg_f 1

page="$1"
key="$2"
null_ret=$3
translation=""

if [ -n "$page" ] && [ -n "$key" ] ; then
	. /usr/lib/gargoyle/i18nServices.sh
	translation=$(shell_i18n_string "$page" "$key" $null_ret)
else
	translation=$key
fi

echo "$translation"
